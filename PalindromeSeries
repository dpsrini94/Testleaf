package Assingments;

public class PalindromeSeries {

	public static void main(String[] args) {
	
		String s = "MADAM";
		int i=0;
		int j=s.length()-1;
		
		while (i<j) {
			if (s.charAt(i)!= s.charAt(j)) {
					System.out.println("This is not a palindrome series");
					break;		
		}
		i++;
		j--;
	}
System.out.println("This is a Palindrome Series");
}
}

output:
This is a Palindrome Series
