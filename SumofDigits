package Assingments;

public class SumofN {

	public static void main(String[] args) {
		int n = 4321;
		int sum = 0;
		while (n>0) {

			int temp = n%10;
			
			System.out.println("Reminder is:" + temp);
			
			n=n/10;
			sum = sum+temp;
			
			System.out.println("Sum of the numbers are:" + sum);
			
			
		}

	}

}

output:
Reminder is:1
Sum of the numbers are:1
Reminder is:2
Sum of the numbers are:3
Reminder is:3
Sum of the numbers are:6
Reminder is:4
Sum of the numbers are:10
